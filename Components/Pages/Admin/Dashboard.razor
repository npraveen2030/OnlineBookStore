@page "/admindashboard"
@rendermode InteractiveServer
<div class="page">
	<div class="top-row px-4 bg-dark text-white">
		<AdminMenu></AdminMenu>
	</div>
</div>
<div class="mt-4">
	<div class="row">
		<div class="col-12 text-center">
			<h3 class="text-lg font-medium mb-3">User Orders List</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-1"></div>
		<div class="col-10">

			<table class="table table-striped table-bordered">
				<thead class="table-light">
					<tr>
						<th>User Name</th>
						<th>Order Date</th>
						<th>Image</th>
						<th>Title</th>
						<th>Price (₹)</th>
						<th>Quantity</th>
						<th>Total (₹)</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in cartItems)
					{
						<tr>
							<td>
								@item.User.Lastname   @item.User.Firstname
							</td>
							<td>@item.DateAdded?.ToString("dd/MM/yyyy")</td>
							<td>
								<img src="@item.Book.ImageUrl" alt="@item.Book.Title" style="width: 50px;" />
							</td>
							<td>@item.Book.Title</td>
							<td>@item.Book.Price</td>
							<td>
								@item.Quantity
							</td>
							<td>@(item.Book.Price * item.Quantity)</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
		<div class="col-1"></div>
	</div>
</div>
