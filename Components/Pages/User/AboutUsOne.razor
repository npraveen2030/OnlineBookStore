        }

        .subtitle {
            font-size: 24px;
            margin-top: 10px;
            margin-bottom: 20px;
            letter-spacing: 1px;
        }

        .social-icons {
            margin: 20px 0;
        }

            .social-icons a {
                color: white;
                font-size: 24px;
                margin: 0 15px;
                transition: 0.3s ease;
            }

                .social-icons a:hover {
                    color: #ddd;
                }

